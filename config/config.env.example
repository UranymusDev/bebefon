# BabyMonitor Configuration
# Copy to config.env and fill in your values:
#   cp config.env.example config.env

# === Device Identity ===
DEVICE_NAME="Baby's Bebefon"
OWNER_NAME="Name"
GIFT_GIVER="Schenker"

# === Telegram Bot ===
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN="your-bot-token-here"

# === Network ===
TAILSCALE_IP=""
LOCAL_IP=""

# === Ntfy Alerts ===
NTFY_SERVER="https://ntfy.sh"
NTFY_TOPIC="your-unique-topic-here"

# === Healthchecks.io ===
# Create checks at healthchecks.io and add URLs here
HEALTHCHECK_URLS=""

# === Audio Settings ===
AUDIO_DEVICE="hw:2,0"
SAMPLE_RATE=48000
CHANNELS=1

# === Monitor Settings ===
CHECK_INTERVAL=5
DISCONNECT_TIMEOUT=10
ALERT_COOLDOWN=30

# === Heartbeat Beep ===
BEEP_ENABLED=true
BEEP_INTERVAL=5
BEEP_FREQUENCY=800
BEEP_DURATION=0.3
BEEP_VOLUME=0.3
